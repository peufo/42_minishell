	"version": "0.2.0",
	"configurations": [
		{
			"name": "Lancer (Linux)",
			"type": "cppdbg",
			"request": "launch",
			"program": "${workspaceFolder}/minishell",
			"args": ["./test/wild.sh"],
			"stopAtEntry": false,
			"cwd": "${workspaceFolder}",
			"environment": [],
			"externalConsole": false,
			"MIMode": "gdb"
		},
		{
			"name": "Lancer child (Linux)",
			"type": "cppdbg",
			"request": "launch",
			"program": "${workspaceFolder}/minishell",
			"args": ["./test/pipe.sh"],
			"stopAtEntry": false,
			"cwd": "${workspaceFolder}",
			"environment": [],
			"externalConsole": false,
			"MIMode": "gdb",
			"setupCommands": [{ "text": "-gdb-set follow-fork-mode child" }]
		},
		{
			"name": "Lancer (MacOS)",
			"type": "cppdbg",
			"request": "launch",
			"program": "${workspaceFolder}/minishell",
			"args": ["./test/wild.sh"],
			"stopAtEntry": false,
			"cwd": "${workspaceFolder}",
			"environment": [],
			"externalConsole": false,
			"MIMode": "lldb",
			"setupCommands": [
				{ "text": "settings set target.process.follow-fork-mode child" }
			]
		}
	]
}

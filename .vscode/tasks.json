{
	"tasks": [
		{
			"type": "cppbuild",
			"label": "C/C++: clang générer le fichier actif",
			"command": "/usr/bin/clang",
			"args": [
				"-fcolor-diagnostics",
				"-fansi-escape-codes",
				"-I",
				"./lib/libft",
				"-I",
				"./src",
				"-L",
				"./lib/libft",
				"-lft",
				"-lreadline",
				"-g",
				"./src/*.c",
				"./src/**/*.c",
				"-o",
				"./minishell"
			],
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"problemMatcher": ["$gcc"],
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"detail": "Tâche générée par le débogueur."
		}
	],
	"version": "2.0.0"
}
